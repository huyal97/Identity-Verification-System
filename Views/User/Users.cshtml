        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TcKimlik.TCKimlikNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TcKimlik.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TcKimlik.Soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TcKimlik.DogumYili)
            </td>
            
