@model IEnumerable<TcKimlikTest.Models.Customer>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TcKimlik.TCKimlikNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TcKimlik.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TcKimlik.Soyad)
            </th>
